<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/np_color_primary_home_sc" />

            <stroke
                android:width="0dp"
                android:color="@color/np_color_primary_home_sc" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:padding="0dp">
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/surface_light"
                android:startColor="@color/surface_light"
                android:type="linear" />
        </shape>
    </item>
</layer-list>